<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.killerud.skydrive"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-sdk android:minSdkVersion="8"
            android:targetSdkVersion="14"/>

    <application
            android:label="@string/appName"
            android:hardwareAccelerated="true"
            android:name=".BrowserForSkyDriveApplication"
            android:theme="@style/LightTheme"
            android:uiOptions="splitActionBarWhenNarrow"
            android:icon="@drawable/logo">

        <activity android:name=".SignInActivity"
                  android:label="@string/appName">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".BrowserActivity"
                  android:label="@string/mySkyDrive">
        </activity>

        <activity android:name=".SharingReceiverActivity"
            android:label="@string/mySkyDrive">

            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <data android:mimeType="image/*" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".dialogs.UploadFileDialog"
                  android:label="@string/uploadFile"
                android:theme ="@style/LightThemeDialog"
                />

        <activity android:name=".dialogs.NewFolderDialog"
                  android:label="@string/createFolder"
                  android:theme="@style/LightThemeDialog"
                  />

        <activity android:name=".dialogs.PlayAudioDialog"
                  android:theme="@style/LightThemeDialog" />

        <activity android:name=".dialogs.ViewPhotoDialog"
                  android:theme="@style/LightThemeDialog" />

        <service android:name=".XLoader"
                 android:exported="false"
                 android:label="app_name"
                 android:permission="android.permission.INTERNET"
                 />


    </application>
</manifest> 
